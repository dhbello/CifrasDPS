<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.dhbello.dps"
        version   = "0.2.0">
    <name>DPS</name>

    <description>
        Control Social - DPS.
    </description>

    <author href="http://sinesat.com" email="david.bello@sinesat.com">
        David H. Bello
    </author>

    <preference name="phonegap-version" value="2.9.0" />
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/network"/>

    <access origin="*" />
  
    <icon src="icon.png" />
    <icon src="res/icon/cordova_android_36.png" gap:platform="android" gap:density="ldpi"/>
    <icon src="res/icon/cordova_android_48.png" gap:platform="android" gap:density="mdpi"/>
    <icon src="res/icon/cordova_android_72.png" gap:platform="android" gap:density="hdpi"/>
    <icon src="res/icon/cordova_android_96.png" gap:platform="android" gap:density="xhdpi"/>
    <icon src="res/icon/cordova_ios_57.png" gap:platform="ios" width="57" height="57"/>
    <icon src="res/icon/cordova_ios_72.png" gap:platform="ios" width="72" height="72"/>
    <icon src="res/icon/cordova_ios_114.png" gap:platform="ios" width="114" height="114"/>
    <icon src="res/icon/cordova_ios_144.png" gap:platform="ios" width="144" height="144"/>

    <gap:splash src="res/screen/android_ldpi_portrait.png.png" gap:platform="android" gap:density="ldpi"/>
    <gap:splash src="res/screen/android_mdpi_portrait.png" gap:platform="android" gap:density="mdpi"/>
    <gap:splash src="res/screen/android_hdpi_portrait.png" gap:platform="android" gap:density="hdpi"/>
    <gap:splash src="res/screen/android_xhdpi_portrait.png" gap:platform="android" gap:density="xhdpi"/>
    <gap:splash src="res/screen/iphone_portrait.png" gap:platform="ios" width="320" height="480"/>
    <gap:splash src="res/screen/iphone_retina_portrait.png" gap:platform="ios" width="640" height="960"/>
    <gap:splash src="res/screen/ipad_portrait.png" gap:platform="ios" width="768" height="1024"/>
    <gap:splash src="res/screen/ipad_landscape.png" gap:platform="ios" width="1024" height="768"/>
    
    <gap:splash src="res/screen/ios_640_1136.png" gap:platform="ios" width="640" height="1136" /> <!-- iPhone 5, iPod Touch 5 -->
    <gap:splash src="res/screen/ios_2048_1496.png" gap:platform="ios" width="2048" height="1496" /> <!-- iPad 3, 4 -->
    <gap:splash src="res/screen/ios_1536_2008.png" gap:platform="ios" width="1536" height="2008" /> <!-- iPad 3, 4 -->

    
</widget>
